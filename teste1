toggleCorner.Parent = toggleButton

-- Fun√ß√µes
local function updateStatus(text, color)
	statusLabel.Text = text
	statusLabel.TextColor3 = color or Color3.fromRGB(200, 200, 200)
end

local function extractServerCode(link)
	-- Extrair c√≥digo do servidor privado do link
	local patterns = {
		"privateServerLinkCode=([^&]+)",
		"code=([^&]+)",
		"/share%?code=([^&]+)"
	}
	
	for _, pattern in ipairs(patterns) do
		local code = string.match(link, pattern)
		if code then
			return code
		end
	end
	
	return nil
end

local function shareServerLink()
	local link = linkBox.Text
	
	if link == "" or link == nil then
		updateStatus("‚ùå Por favor, insira um link!", Color3.fromRGB(255, 100, 100))
		return
	end
	
	local serverCode = extractServerCode(link)
	
	if not serverCode then
		updateStatus("‚ùå Link inv√°lido! Verifique o formato.", Color3.fromRGB(255, 100, 100))
		return
	end
	
	updateStatus("üì° Compartilhando com todos os jogadores...", Color3.fromRGB(100, 255, 100))
	
	-- Enviar para o chat
	local ReplicatedStorage = game:GetService("ReplicatedStorage")
	local chatMessage = "üéÆ SERVIDOR PRIVADO DISPON√çVEL! üéÆ\n" .. link .. "\nüöÄ Clique para entrar!"
	
	-- Tentar enviar mensagem no chat
	pcall(function()
		game:GetService("TextChatService").TextChannels.RBXGeneral:SendAsync(chatMessage)
	end)
	
	-- M√©todo alternativo (chat legado)
	pcall(function()
		game:GetService("ReplicatedStorage").DefaultChatSystemChatEvents.SayMessageRequest:FireServer(chatMessage, "All")
	end)
	
	-- Contar jogadores notificados
	local playerCount = #Players:GetPlayers() - 1
	updateStatus("‚úÖ Compartilhado com " .. playerCount .. " jogador(es)!", Color3.fromRGB(100, 255, 100))
	
	wait(2)
	updateStatus("Link copiado! Envie para seus amigos.", Color3.fromRGB(200, 200, 200))
end

-- Eventos dos bot√µes
shareButton.MouseButton1Click:Connect(shareServerLink)

closeButton.MouseButton1Click:Connect(function()
	mainFrame.Visible = false
	toggleButton.Visible = true
end)

toggleButton.MouseButton1Click:Connect(function()
	mainFrame.Visible = true
	toggleButton.Visible = false
end)

-- Efeito hover no bot√£o compartilhar
shareButton.MouseEnter:Connect(function()
	shareButton.BackgroundColor3 = Color3.fromRGB(0, 200, 255)
end)

shareButton.MouseLeave:Connect(function()
	shareButton.BackgroundColor3 = Color3.fromRGB(0, 170, 255)
end)

-- Copiar link ao clicar na caixa de texto
linkBox.Focused:Connect(function()
	updateStatus("üí° Cole seu link aqui com Ctrl+V", Color3.fromRGB(255, 200, 100))
end)

print("‚úÖ Sistema de Compartilhamento de Servidor Privado carregado!")
print("üìù Cole o link do seu servidor privado e compartilhe com todos!")
