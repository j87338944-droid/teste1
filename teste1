-- // Script Local - Brainrot Server & Position GUI
-- Feito para o jogo Steal a Brainrot (ID: 109983668079237)
-- Funciona com executores (n√£o precisa colocar em StarterGui)

if game.CoreGui:FindFirstChild("BrainrotHub") then
	game.CoreGui.BrainrotHub:Destroy()
end

local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local StarterGui = game:GetService("StarterGui")

local LocalPlayer = Players.LocalPlayer
local GameID = 109983668079237 -- Steal a Brainrot

-- Fun√ß√£o para buscar servidores p√∫blicos do jogo
local function BuscarServidores()
	local lista = {}
	local cursor = ""
	repeat
		local url = ("https://games.roblox.com/v1/games/%d/servers/Public?sortOrder=Desc&limit=100%s"):format(GameID, cursor ~= "" and "&cursor="..cursor or "")
		local response = game:HttpGet(url)
		local data = HttpService:JSONDecode(response)
		for _, servidor in ipairs(data.data) do
			if servidor.playing < servidor.maxPlayers then
				table.insert(lista, servidor)
			end
		end
		cursor = data.nextPageCursor
	until not cursor
	return lista
end

-- Cria√ß√£o da GUI
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
ScreenGui.Name = "BrainrotHub"
ScreenGui.ResetOnSpawn = false

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 280)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -140)
MainFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true

Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

-- Bot√£o Fechar GUI
local CloseBtn = Instance.new("TextButton", MainFrame)
CloseBtn.Text = "‚ùå"
CloseBtn.Size = UDim2.new(0, 30, 0, 30)
CloseBtn.Position = UDim2.new(1, -35, 0, 5)
CloseBtn.BackgroundColor3 = Color3.fromRGB(60, 0, 0)
CloseBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
CloseBtn.Font = Enum.Font.GothamBold
CloseBtn.TextSize = 18
Instance.new("UICorner", CloseBtn)
CloseBtn.MouseButton1Click:Connect(function()
	ScreenGui:Destroy()
end)

-- T√≠tulo
local Title = Instance.new("TextLabel", MainFrame)
Title.Size = UDim2.new(1, 0, 0, 40)
Title.BackgroundTransparency = 1
Title.Text = "üåê Servidores Brainrot"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 20
Title.TextColor3 = Color3.fromRGB(255, 255, 255)

-- Aba de Servidores
local ServerFrame = Instance.new("Frame", MainFrame)
ServerFrame.Size = UDim2.new(1, 0, 1, -40)
ServerFrame.Position = UDim2.new(0, 0, 0, 40)
ServerFrame.BackgroundTransparency = 1

local UIListLayout = Instance.new("UIListLayout", ServerFrame)
UIListLayout.Padding = UDim.new(0, 10)
UIListLayout.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIListLayout.VerticalAlignment = Enum.VerticalAlignment.Top

-- Fun√ß√£o para teleportar para o servidor desejado
local function TeleportarParaServidor(valor)
	local servidores = BuscarServidores()
	local alvo = nil

	for _, s in ipairs(servidores) do
		if string.find(string.lower(s.name or ""), string.lower(valor)) then
			alvo = s
			break
		end
	end

	if not alvo and #servidores > 0 then
		alvo = servidores[math.random(1, #servidores)]
	end

	if alvo then
		StarterGui:SetCore("SendNotification", {Title="üåê Teleportando...", Text="Entrando no servidor de "..valor, Duration=3})
		TeleportService:TeleportToPlaceInstance(GameID, alvo.id, LocalPlayer)
	else
		StarterGui:SetCore("SendNotification", {Title="‚ùå Nenhum servidor encontrado", Text="Tente novamente!", Duration=3})
	end
end

-- Criar bot√µes dos servidores
local function CriarBotao(texto, cor, callback)
	local btn = Instance.new("TextButton", ServerFrame)
	btn.Size = UDim2.new(0, 300, 0, 40)
	btn.Text = texto
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 16
	btn.BackgroundColor3 = cor
	btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	Instance.new("UICorner", btn)
	btn.MouseButton1Click:Connect(callback)
	return btn
end

CriarBotao("üß† Brainrots 60M", Color3.fromRGB(40, 40, 80), function()
	TeleportarParaServidor("60m")
end)

CriarBotao("üß† Brainrots 50M", Color3.fromRGB(80, 40, 40), function()
	TeleportarParaServidor("50m")
end)

CriarBotao("‚ö° Buscar R√°pido", Color3.fromRGB(50, 80, 50), function()
	TeleportarParaServidor("")
end)

-- Seta para pr√≥xima aba
local Next = CriarBotao("‚û° Pr√≥ximo", Color3.fromRGB(60, 60, 60), function() end)
Next.Size = UDim2.new(0, 120, 0, 30)

-- Aba 2: salvar posi√ß√£o
local SaveFrame = Instance.new("Frame", MainFrame)
SaveFrame.Size = UDim2.new(1, 0, 1, -40)
SaveFrame.Position = UDim2.new(0, 0, 0, 40)
SaveFrame.BackgroundTransparency = 1
SaveFrame.Visible = false

local savedPosition = nil
local teleported = false

local SaveBtn = Instance.new("TextButton", SaveFrame)
SaveBtn.Size = UDim2.new(0, 300, 0, 40)
SaveBtn.Position = UDim2.new(0.5, -150, 0.3, 0)
SaveBtn.Text = "üíæ Salvar Posi√ß√£o"
SaveBtn.Font = Enum.Font.GothamBold
SaveBtn.TextSize = 16
SaveBtn.BackgroundColor3 = Color3.fromRGB(40, 80, 40)
SaveBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", SaveBtn)

SaveBtn.MouseButton1Click:Connect(function()
	local char = LocalPlayer.Character
	if char and char:FindFirstChild("HumanoidRootPart") then
		savedPosition = char.HumanoidRootPart.CFrame
		teleported = false
		StarterGui:SetCore("SendNotification", {Title="‚úÖ Posi√ß√£o Salva", Text="Sua posi√ß√£o foi guardada.", Duration=3})
	end
end)

local BackBtn = Instance.new("TextButton", SaveFrame)
BackBtn.Size = UDim2.new(0, 300, 0, 40)
BackBtn.Position = UDim2.new(0.5, -150, 0.55, 0)
BackBtn.Text = "‚Ü© Voltar para Posi√ß√£o"
BackBtn.Font = Enum.Font.GothamBold
BackBtn.TextSize = 16
BackBtn.BackgroundColor3 = Color3.fromRGB(80, 40, 40)
BackBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", BackBtn)

BackBtn.MouseButton1Click:Connect(function()
	local char = LocalPlayer.Character
	if savedPosition and char and char:FindFirstChild("HumanoidRootPart") then
		if not teleported then
			teleported = true
			char:SetPrimaryPartCFrame(savedPosition)
			StarterGui:SetCore("SendNotification", {Title="‚Ü© Teleportado", Text="Voc√™ voltou √† posi√ß√£o salva!", Duration=3})
		end
	else
		StarterGui:SetCore("SendNotification", {Title="‚ùå Erro", Text="Nenhuma posi√ß√£o salva!", Duration=3})
	end
end)

-- Voltar √† aba 1
local BackToServers = Instance.new("TextButton", SaveFrame)
BackToServers.Size = UDim2.new(0, 100, 0, 30)
BackToServers.Position = UDim2.new(0.5, -50, 0.8, 0)
BackToServers.Text = "‚¨Ö Voltar"
BackToServers.Font = Enum.Font.GothamSemibold
BackToServers.TextSize = 16
BackToServers.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
BackToServers.TextColor3 = Color3.fromRGB(255, 255, 255)
Instance.new("UICorner", BackToServers)

Next.MouseButton1Click:Connect(function()
	ServerFrame.Visible = false
	SaveFrame.Visible = true
end)

BackToServers.MouseButton1Click:Connect(function()
	ServerFrame.Visible = true
	SaveFrame.Visible = false
end)
